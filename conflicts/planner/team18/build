#!/bin/bash
#planners=("preprocess-old" "preprocess" "features" "parser" "search" "search-mercury" "arvand" "lama-2008" "lamar" "lpg" "madagascar" "probe" "yahsp2-mt")
# planners=("arvand" "parser" "probe" "preprocess-old" "preprocess" "search" "lamar" "jasper" "siw" "mercury" "bfs-f" "lama-2008" "yahsp2-mt")
planners=("bfs-f")
#"lpg" "madagascar" "probe" "yahsp2-mt"


cd "$(dirname "$0")"
ROOT=$PWD


for item in ${planners[*]}
do
	planner_path="$ROOT"/src/"$item"
	echo -e "\n**************************"
	echo "*** Compiling" $item "***" 
	echo -e "**************************\n"
	cd $planner_path
	./build

	if [ $? -ne 0 ]; then
		echo -e "\nCompilation error when compiling:" $item 
		exit 1
	fi

done

echo -e "\nPlanner ready to the International Planning Competition 2018"
